page {
	height: 100%;
	background-color: #f5f6fa;
}

.tag-choose{
	width: 650rpx;
	margin: 0 auto;
	box-sizing: border-box;
	box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
	background-color: white;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 50rpx;
	margin-top: 50rpx;
}

.tag-choose .picker{
	font-size: 32rpx;
	color: #192a56;
}

.addForm{
	width: 650rpx;
	margin: 0 auto;
	box-sizing: border-box;
	box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
	background-color: white;
	border-radius: 20rpx;
	padding: 35rpx;
	margin-bottom: 50rpx;
}

.title .title-input{
	font-size: 48rpx;
	width: 100%;
	height: 54rpx;
	margin-bottom: 30rpx;
	color: #192a56;
}

.input-placeholder{
	color: #7f8fa6;
}

.des .des-input{
	width: 100%;
	font-size: 36rpx;
	min-height: 200rpx;
	margin-bottom: 30rpx;
	color: #595959;
}

.addItem-btn{
	margin: 0 auto;
	width: 400rpx;
	height: 100rpx;
	text-align: center;
	line-height: 100rpx;
	border-radius: 30rpx;
	background-color: #7688ba;
  color: white;
  font-size: 36rpx;
  font-weight: 400;
	margin-bottom: 155rpx;
}
