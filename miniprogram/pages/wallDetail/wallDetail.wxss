/* pages/wallDetail/wallDetail.wxss */
page {
	/* height: 100%; */
	background-color: #f5f6fa;
}

.detail-main {
	width: 650rpx;
	box-sizing: border-box;
	padding: 40rpx 40rpx;
	margin: 0 auto;
	margin-top: 30rpx;
	margin-bottom: 150rpx;
	background-color: white;
	border-radius: 20rpx;
	box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
}

.detail-title {
	color: #20366d;
	font-size: 42rpx;
	margin-bottom: 30rpx;
	font-weight: bold;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.detail-date {
	margin-bottom: 30rpx;
}

.detail-tag {
	margin-bottom: 30rpx;
}

.fenge {
	margin-bottom: 30rpx;
	width: 600rpx;
	box-sizing: border-box;
	height: 1rpx;
	background-color: #20366d;
}

.detail-msg {
	text-align: justify;
	margin-bottom: 30rpx;
}

.imgList {
	white-space: nowrap;
}

.reminder {
	margin-bottom: 20rpx;
	color: #b5b5b5;
	font-size: 24rpx;
}

.detail-img {
	width: 200rpx;
	height: 200rpx;
	border-radius: 20rpx;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	display: inline-block;
}

.detail-img:last-child {
	margin-right: 0rpx;
}
