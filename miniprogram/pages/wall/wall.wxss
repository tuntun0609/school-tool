/* pages/wall/wall.wxss */

page {
	height: 100%;
	background-color: #f5f6fa;
}

.wall-scroll-view {
	/* width: 650rpx; */
	height: 80rpx;
	line-height: 80rpx;
	white-space: nowrap;
	box-sizing: border-box;
	margin: 0 auto;
	/* margin-top: 20rpx; */
	background-color: white;
	/* border-radius: 20rpx; */
	box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.wall-scroll-item {
	width: 200rpx;
	display: inline-block;
	text-align: center;
}

.wall-scroll-item:first-child {
	margin-left: 10rpx;
}

.wall-title {
	text-align: center;
	margin-top: 40rpx;
	font-size: 48rpx;
	color: #20366d;
	letter-spacing: 10rpx;
}

.wall-main{
	padding-bottom: 250rpx;
}

.tagChoose{
	color: #3a206f;
	font-weight: bold;
}

.changePage{
  width: 750rpx;
  height: 100rpx;
  line-height: 50rpx;
  /* margin-top: 30rpx; */
  /* margin-bottom: 120rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
	position: fixed;
	bottom: 120rpx;
	/* border-bottom: solid #b5b5b5 2rpx; */
}

.changePage .prePage-btn{
  width: 375rpx;
  text-align: center;
  border-right: solid #b5b5b5 2rpx;
}

.changePage .nextPage-btn{
  width: 375rpx;
  text-align: center;
}

.area{
	position: fixed;
	top: 80rpx;
	/* bottom: 50rpx; */
	width: 750rpx;
	height: calc(100% - 300rpx);
}

.view{
	width: 100rpx;
	height: 100rpx;
	background-color: #2c4994;
	border-radius: 50%;
	color: white;
	font-size: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);	
}

.view-img{
	width: 60rpx;
	height: 60rpx;
}