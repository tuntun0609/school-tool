/* pages/wallDetail/wallDetail.wxss */
page {
	/* height: 100%; */
	background-color: #f5f6fa;
}

.detail-main {
	width: 650rpx;
	box-sizing: border-box;
	padding: 40rpx 40rpx;
	margin: 0 auto;
	margin-top: 30rpx;
	margin-bottom: 30rpx;
	background-color: white;
	border-radius: 20rpx;
	box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
}

.detail-title {
	color: #20366d;
	font-size: 42rpx;
	margin-bottom: 30rpx;
	font-weight: bold;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.detail-date {
	margin-bottom: 30rpx;
}

.detail-tag {
	margin-bottom: 30rpx;
}

.fenge {
	margin-bottom: 30rpx;
	width: 600rpx;
	box-sizing: border-box;
	height: 1rpx;
	background-color: #20366d;
}

.detail-msg {
	text-align: justify;
	margin-bottom: 30rpx;
}

.imgList {
	white-space: nowrap;
}

.reminder {
	margin-bottom: 20rpx;
	color: #b5b5b5;
	font-size: 24rpx;
}

.detail-img {
	width: 200rpx;
	height: 200rpx;
	border-radius: 20rpx;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	display: inline-block;
}

.detail-img:last-child {
	margin-right: 0rpx;
}

.addComment{
	width: 750rpx;
	/* min-height: 150rpx; */
	background-color: white;
	display: flex;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
	padding: 30rpx;
	box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
	position: fixed;
	bottom: 0rpx;
}

.addComment-form{
	width: 520rpx;
	border: #7688ba 1rpx solid;
	border-radius: 20rpx;
	box-sizing: border-box;
	padding: 20rpx;
}

.addComment-input{
	width: 100%;
	min-height: 100rpx;
}

.addComment-btn{
	width: 150rpx;
	height: 100rpx;
	text-align: center;
	line-height: 100rpx;
	border-radius: 20rpx;
	background-color: #7688ba;
  color: white;
  font-size: 36rpx;
  font-weight: 400;
	box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
}

.commentList{
	box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.1);
	width: 750rpx;
	background-color: white;
	margin-bottom: 200rpx;
}

.commentItem{
	width: 700rpx;
	margin: 0 auto;
	border-bottom: solid #b5b5b5 1rpx;
	box-sizing: border-box;
	padding: 20rpx;
}

.commentItem .comment-msg{
	margin-bottom: 5rpx;
	text-align:justify;
}

.commentItem .comment-info{
	color: #b5b5b5;
	font-size: 24rpx;
}

.commentItem:nth-last-of-type(1){
	border-bottom:none
}

